{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.avatar_details'|trans}} {{user.name}}
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ 'title.avatar_details'|trans}} {{user.name}}</h1>

        {% if avatar is defined and avatar|length %}
                <div class="col-md-8">
                    <img src="{{ asset(photos_directory ~ avatar.filename) }}" alt="avatar" class="img-fluid mb-3" style="max-height:800px;">

                    <div class="btn-group mt-3" role="group">
                        {% if is_granted('EDIT', user) %}
                            <a href="{{ path('avatar_edit', {id: user.id}) }}" class="btn btn-outline-success" title="{{ 'action.edit'|trans }}">
                                {{ 'action.edit'|trans }}
                            </a>
                        {% endif %}

                        {% if is_granted('EDIT', user) %}
                            <a href="{{ path('avatar_delete', {id: user.id}) }}" class="btn btn-outline-danger" title="{{ 'action.delete'|trans }}">
                                {{ 'action.delete'|trans }}
                            </a>
                        {% endif %}
                        <a href="{{ path('user_show', {id: user.id}) }}" class="btn btn-outline-secondary" title="{{ 'action.back_to_list'|trans }}">
                            {{ 'action.back_to_list'|trans }}
                        </a>
                </div>
            </div>
        {% else %}
            <div class="alert alert-warning">
                {{ 'message.record_not_found'|trans }}
            </div>
        {% endif %}
    </div>
{% endblock %}
