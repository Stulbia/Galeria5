{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.top_photo_list'|trans }}
{% endblock %}
{% block body %}
    <h1>{{ 'title.top_photo_list'|trans }}</h1>

        {% if pagination is defined and pagination.items|length %}

            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>{{ 'label.photo'|trans }}</a></th>
                    <th>{{ 'label.title'|trans  }}</th>
                    <th>{{ 'label.rating'|trans }}</th>
                    <th>{{ 'label.description'|trans }}</th>

                </tr>
                </thead>
                <tbody>

                {% for photo in pagination.items %}
                        <tr>
                            <td>

                                <img src="{{ asset(photos_directory ~ photo.filename) }}" alt="photo" style="
                                    width: 300px; margin: 5px;" >
                            </td>
                            <td>{{ photo.title }}</td>
                            <td>{{ photo.avg_value }}</td>
                            <td><a href="{{ path('photo_show', {id: photo.id}) }}" class="btn btn-outline-primary" title="{{ 'action.show'|trans }}">
                                    {{ 'action.show'|trans }}
                                </a>
                            </td>
                        </tr>

                {% endfor %}
                </tbody>
            </table>

            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>

        {% else %}
            <p>
                {{ 'message.empty_list'|trans }}
            </p>
        {% endif %}
{% endblock %}