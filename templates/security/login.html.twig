{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                <p>{{ 'label.logged_in_as'|trans }} {{ app.user.name }}</p>
                 <a  class="btn btn-lg btn-primary" href="{{ path('app_logout') }}">{{ 'action.logout'|trans }}</a>
            </div>
        {% endif %}
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">{{ 'title.login_title'|trans }}</h1>

        <div class="form-group">
            <label for="inputEmail">{{ 'label.email'|trans }}</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>

        <div class="form-group">
            <label for="inputPassword">{{ 'label.password'|trans }}</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> {{ 'label.remember_me'|trans }}
            </label>
        </div>

        <button class="btn btn-lg btn-primary" type="submit">
            {{ 'action.sign_in'|trans }}
        </button>
    </form>
{% endblock %}
